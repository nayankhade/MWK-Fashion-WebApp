package com.mwkfashion.mwk_fashion_backend.controller.offersseller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.mwkfashion.mwk_fashion_backend.model.offersSeller.DashBoardOffers;
import com.mwkfashion.mwk_fashion_backend.services.offerSeller.OffersSellerServices;

@RestController
public class OffersSellerController {

    @Autowired
    private OffersSellerServices offersSellerServices;

    @PostMapping("/dashboard")
    public DashBoardOffers saveOfferImg(@RequestParam("image") MultipartFile file) {
        return offersSellerServices.saveOffersData(file);
    }
}
